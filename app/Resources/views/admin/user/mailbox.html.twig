{% extends 'base.html.twig' %}

{% block body_id %}

{% endblock %}

{% block main %}
    <div class="container body-content">
        <div class="col-md-6">
            <h3>Inbox</h3>
            <table class="table table-bordered" border="solid black">
                <tr>
                    <th>Added on:</th>
                    <th>From:</th>
                    <th>About:</th>
                    <th>Status:</th>
                </tr>
                {% for message in inMessages %}
                    <tr>
                        <td>{{ message.dateAdded|date("d/m/Y") }}</td>
                        <td>{{ message.sender.fullName }}</td>
                        <td><a href="{{ path('user_mail', {'id': message.id}) }}">{{ message.about }}</a></td>
                        {% if not message.reader %}
                            <td><span style="float: right; color: red">Unread</span></td>
                        {% else %}
                            <td><span style="float: right; color: green">Readed</span></td>
                        {% endif %}
                    </tr>
                {% else %}
                    <p>
                        Empty list
                    </p>
                {% endfor %}
            </table>
        </div>

        <div class="col-md-6">
            <h3>Outbox</h3>
            <table class="table table-bordered" border="solid-black">
                <tr>
                    <th>Added on: </th>
                    <th>Recipient:</th>
                    <th>About:</th>
                </tr>
                {% for message in outMessages %}
                    <tr>
                        <td>{{ message.dateAdded|date("d/m/Y") }}</td>
                        <td>{{ message.recipient.fullName }}</td>
                        <td><a href="{{ path('user_mail', {'id': message.id}) }}">{{ message.about }}</a></td>
                    </tr>
                {% else %}
                    <p>
                        Empty list
                    </p>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}

