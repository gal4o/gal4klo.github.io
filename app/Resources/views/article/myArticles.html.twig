{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            {% for article in articles %}
                <div class="col-md-12">
                    <article>
                        <header>
                           <h2>Title: {{ article.title }}</h2>
                        </header>

                        <p>
                            Content: {{ article.content }}
                        </p>

                        <img src="{{ article.getImage }}" width="400" height="200">

                        {#<p>#}
                            {#Added on: {{ article.dateAdded|format:"yyy-mm-dd" }}#}
                        {#</p>#}

                        <p>Views: {{ article.viewsCount }}</p>
                        <footer>
                            <div class="pull-right">
                                    <a class="btn btn-success btn-xs" href="{{ path('article_edit', {'id': article.id}) }}">Edit</a>
                                    <a class="btn btn-danger btn-xs" href="{{ path('article_delete', {'id': article.id}) }}">Delete</a>
                                <a class="btn btn-default btn-xs" href="{{ path('blog_index') }}">back &raquo;</a>
                            </div>
                        </footer>
                    </article>
                </div>
            {% else %}
                <p>
                    Empty list
                </p>
            {% endfor %}
        </div>
    </div>
{% endblock %}

